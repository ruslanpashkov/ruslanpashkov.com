---
import { Icon } from 'astro-icon/components';
---

<a class="skip-to-content" data-testid="skip-to-content" href="#content">
	Skip to content

	<Icon aria-hidden="true" name="arrow-default" width={40} />
</a>

<style>
	.skip-to-content {
		position: absolute;
		z-index: var(--z-index-skip-to-content);
		top: 0;
		left: -9999px;
		display: flex;
		gap: 12px;
		align-items: center;
		width: max-content;
		padding: 1.25em;
		border-radius: 12px;
		opacity: 0;
		background-color: var(--color-primary);

		&:focus {
			left: 50%;
			transform: translateX(-50%);
			opacity: 1;
		}

		@media (prefers-reduced-motion: no-preference) {
			transition: opacity var(--motion-duration);
		}
	}
</style>

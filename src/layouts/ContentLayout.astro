---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="container container--spaced">
	<header class="headline">
		<h1 class="headline__title">
			{title}
		</h1>

		<div class="headline__divider" role="presentation"></div>
	</header>

	<slot />
</div>

<style>
	.headline {
		margin-bottom: 40px;
	}

	.headline__title {
		margin-bottom: 12px;
		font-size: 2.25rem;

		@media (width >= 768px) {
			font-size: 3rem;
		}

		@media (width >= 1024px) {
			font-size: 3.75rem;
		}
	}

	.headline__divider {
		height: 1px;
		background-color: var(--color-contrast);
	}
</style>

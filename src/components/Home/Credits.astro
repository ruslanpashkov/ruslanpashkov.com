---
import type { Link } from '@/types/Link';

interface Props {
	credits: Link[];
}

const { credits } = Astro.props;
---

<ul class="credit-list" data-testid="home-credits-list">
	{
		credits.map(({ title, url }) => (
			<li class="credit-list__item" data-testid="home-credit-item">
				<a
					class="credit-list__link hover"
					data-testid="home-credit-link"
					href={url}
					rel="noreferrer"
				>
					{title}
				</a>
			</li>
		))
	}
</ul>

<style>
	.credit-list {
		display: flex;
		flex-direction: column;
		gap: 8px;

		@media (width >= 48rem) {
			gap: 12px;
			align-items: end;
		}
	}

	.credit-list__item {
		max-width: max-content;
	}

	.credit-list__link {
		text-decoration: underline;

		@media (width >= 48rem) {
			font-size: 1.25rem;
		}
	}
</style>

---
import { copyright } from '@/data/copyright';
import { global } from '@/data/global';
---

<footer class="footer">
	<div class="container footer__content">
		<a class="footer__back-to-top" href="#body">Back to top</a>

		<p class="footer__copyright">
			Â© {copyright.year}
			{global.author}.

			{
				copyright.licenses.map((license) => (
					<>
						{license.label}:
						<span class="footer__license">
							<a
								class="footer__link"
								href={license.url}
								rel="noopener noreferrer"
								target="_blank"
							>
								{license.title}
							</a>
							.
						</span>
					</>
				))
			}
		</p>
	</div>
</footer>

<style>
	.footer {
		display: flex;
		justify-content: center;
		justify-items: center;
		padding-block: 20px;
	}

	.footer__content {
		display: flex;
		flex-direction: column;
		gap: 20px;
		align-items: center;
		justify-content: center;
	}

	.footer__back-to-top {
		align-self: end;
		text-decoration: underline;

		@media (width >= 1024px) {
			position: absolute;
			right: 20px;
			align-self: auto;
		}
	}

	.footer__copyright {
		text-align: center;
		text-wrap: balance;

		@media (width >= 768px) {
			font-size: 1.25rem;
		}
	}

	.footer__license {
		display: inline-flex;
	}

	.footer__link {
		display: inline-block;
		text-decoration: underline;
	}
</style>
